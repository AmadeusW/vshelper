<Window x:Class="helperapp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:helperapp"
        mc:Ignorable="d"
        Title="VS Helper" 
        SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded"
        WindowStyle="ToolWindow"
        Topmost="True"
        Closed="Window_Closed" MouseDown="Window_MouseDown"
        >
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" x:Key="Header">
            <Setter Property="Margin" Value="5 0 5 0"></Setter>
            <Setter Property="FontSize" Value="11"></Setter>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Height" Value="40"></Setter>
            <Setter Property="Width" Value="60"></Setter>
            <Setter Property="FontSize" Value="11"></Setter>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <TextBlock Name="Status" Style="{StaticResource ResourceKey=Header}" ToolTip="{Binding ElementName=Status, Path=Text}" MinWidth="230" Margin="5 5 5 0">Use Visual Studio to get started</TextBlock>
        <TextBlock Name="Version" Style="{StaticResource ResourceKey=Header}" ToolTip="{Binding ElementName=Version, Path=Text}" MinWidth="230" Margin="5 0 5 5"></TextBlock>
        <WrapPanel Orientation="Horizontal" Name="AllUI" Visibility="Collapsed">
            <Button Click="OnMefClick">
                <TextBlock>MEF<LineBreak/>Errors</TextBlock>
            </Button>
            <Button Click="OnActivityLogClick">
                <TextBlock>Activity<LineBreak/>Log</TextBlock>
            </Button>
            <Button Click="OnCommandPromptClick">CMD</Button>
            <Button Click="OnExtensionsClick">
                <TextBlock>Extension<LineBreak/>DIR</TextBlock>
            </Button>
            <Button Click="OnInstallLocationClick">
                <TextBlock>Installation<LineBreak/>DIR</TextBlock>
            </Button>
        </WrapPanel>
    </StackPanel>
</Window>
